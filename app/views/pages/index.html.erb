<% provide(:title, 'ZERO | Про zero') %>

	<div id="container">
		<%= render 'layouts/header' %>
		<div id="middle">
			<div id="left">
				<ul class="l-menu">	
					<% @pages.each do |page| %>
					<%= content_tag :li, (link_to page.title, page), :class => ('active' if @page == page) %>
					<% end %>
					<li><%= link_to "клиенты", clients_path %></li>
				</ul>
			</div>

			<div id="right">
				<div class="h1">
					<h1><%= @page.title %></h1>
				</div>
					
				<div class="content">
					<%= sanitize @page.description %>
				</div>
			</div>
		</div>
		
		<div class="footer-space"></div>
	</div>
	
	<%= render 'layouts/footer' %>
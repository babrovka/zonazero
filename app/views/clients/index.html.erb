	<div id="container">
		<%= render 'layouts/header' %>
		
		<div id="middle">
			<div id="left">
				<ul class="l-menu">	
					<li><%= link_to "про зеро", about_path %></li>
					<li class="active"><%= link_to "клиенты", clients_path %></li>
					<li><%= link_to "пресс-кит", kit_path %></li>
				</ul>
			</div>

			<div id="right">
				<div class="h1">
					<h1>наши клиенты</h1><span class="h1-notice">(нажмите на логотип, чтобы посмотреть список работ)</span>
				</div>
					
				<ul class="clients-list">
					<% @clients.each do |client| %>
					<li>
						<div>
							<img src="<%= client.logo2 %>" width="260" height="80" alt="client-3">
							<span class="cl-title"><%= client.title %></span>
							<ul>
								<li><%= client.point1 %></li>
								<li><%= client.point2 %></li>
								<li><%= client.point3 %></li>
								<li><%= client.point4 %></li>
								<li><%= client.point5 %></li>
							</ul>
							<a href="#" class="cl-switch">скрыть</a>
						</div>
						<a href="#"><img src="<%= client.logo1 %>" width="100" height="100" alt="client-1" style="margin-top: -33px"></a>
					</li>
					<% end %>
					</ul>
			</div>
		</div>
		
		<div class="footer-space"></div>
	</div>
	<%= render 'layouts/footer' %>


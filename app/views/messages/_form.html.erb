<div class="order-block" id="order-block">
<%= form_for(@message) do |f| %>
	<ul>
		<li>
			<label>Имя:</label>
			<%= f.text_field :name %>
		</li>
		
		<li>
			<label>Компания:</label>
			<%= f.text_field :company %>
		</li>
		
		<li>
			<label>Должность:</label>
			<%= f.text_field :position %>
		</li>
		
		<li>
			<label>Телефон:</label>
			<div class="ob-answer ob-phone">
				<p>( <%= f.text_field :pre, :class=>'p-code' %> ) <%= f.text_field :tel, :class=>'p-number' %><a href="#" title="Удалить" class="p-remove">Удалить</a><a href="#" title="Добавить" class="p-add">Добавить</a></p>
			</div>
		</li>
		
		<li>
			<label>Эл. почта:</label>
			<%= f.text_field :mail %>
		</li>
		
		<li>
			<label>Чем интересуетесь:</label>
			<div class="ob-answer ob-interest">
				<% Category.all.each do |category| %>
				<p><a href="#"><%= category.title %></a></p>
				<div class="oba-sub">
				    <% Option.where(:category_id => category.id).each do |option| %>
				      <p><%= check_box_tag "message[option_ids][]", option.id %>
				      <%= label_tag dom_id(option), option.title %></p>
				    <% end %>
				</div>
				<% end %>
			</div>
		</li>
		
		<li>
			<label>Примечания:</label>
			<textarea></textarea>
		</li>
		
		<li>
			<label>Хотели бы получить ответ, содержащий:</label>
			<div class="ob-answer">
				<p><input type="checkbox" id="1" /><label for="1">Прайс-лист на указанные услуги</label></p>
				<p><input type="checkbox" id="2" /><label for="2">Презентации проектов</label></p>
				<p><input type="checkbox" id="3" /><label for="3">Референс-лист</label></p>
				<p><input type="checkbox" id="4" /><label for="4">Краткую справку об агентстве</label></p>
			</div>
		</li>
		
		<li>
			<label>Откуда вы узнали о ZERO?:</label>
			<div class="ob-answer oba-zero">
				<p><input type="checkbox" id="5" /><label for="5">Рекомендация</label></p>
				<p><input type="checkbox" id="6" /><label for="6">Публикация в СМИ</label></p>
				<p><input type="checkbox" id="7" /><label for="7">Справочник</label></p>
				<p><input type="checkbox" id="8" /><label for="8">Поиск в интернете</label></p>
				<p><input type="checkbox" id="9" /><label for="9">Отраслевое мероприятие</label></p>
			</div>
		</li>
		<li>
			<label>&nbsp;</label>
			<div class="ob-answer">
				<a href="#" class="ob-submit" tabindex="1" rel="nofollow">Отправить запрос</a>
			</div>
		</li>
	</ul>
</form>
<% end %>
	<a href="index.html" class="logo" title="На главную">ZERO b2b communications agency</a>
	<a href="#" class="ob-close"><span>Заказать</span></a>
</div>
